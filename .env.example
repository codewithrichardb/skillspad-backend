# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/edtech
MONGO_DB=edtech

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES=7

# Server Configuration
PORT=4000
NODE_ENV=development

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# Paystack Configuration
PAYSTACK_SECRET_KEY=your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=your_paystack_public_key
PAYSTACK_CALLBACK_URL=http://localhost:4000/api/payments/verify

# Email Configuration (if applicable)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@example.com
# SMTP_PASSWORD=your_email_password
# EMAIL_FROM=no-reply@yourapp.com

# Rate Limiting (requests per 15 minutes)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Session Secret (for sessions if using express-session)
SESSION_SECRET=your_session_secret

# Optional: Logging
ENABLE_LOGGING=true
LOG_LEVEL=info
